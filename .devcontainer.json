{
	"image": "mcr.microsoft.com/devcontainers/typescript-node:1-22-bookworm",
	"postCreateCommand": "echo 'Acquire::http::Pipeline-Depth \"0\";\nAcquire::http::No-Cache true;\nAcquire::BrokenProxy true;' > /etc/apt/apt.conf.d/99fixbadproxy",
	"postStartCommand": "npm run dev",
	"customizations": {
		"vscode": {
			"extensions": [
				"astro-build.astro-vscode",
				"bradlc.vscode-tailwindcss"
			]
		}
	},
	"portsAttributes": {
		"4321": {
			"label": "Astro",
			"onAutoForward": "openPreview"
		}
	}
}